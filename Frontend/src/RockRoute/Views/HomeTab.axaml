<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RockRoute.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:DataType="local:HomeTabViewModel"
        x:Class="RockRoute.Views.HomeTab">
    <UserControl.DataContext>
        <local:HomeTabViewModel/>
    </UserControl.DataContext>
    
    <DockPanel>
        <Menu DockPanel.Dock="Bottom" Background="#FFCCCB">
            <MenuItem Header="Settings"/>
            <MenuItem Header="Log out"/>
        </Menu>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" VerticalAlignment="Stretch">
        <StackPanel>
            <Border BorderThickness="10"><TextBlock Text="Climbing near you" HorizontalAlignment="Center"/></Border>
            <ItemsControl ItemsSource="{Binding recommendations}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="10"><StackPanel>
                            <TextBlock Text="{Binding routeName}" HorizontalAlignment="Center" />
                            <TextBlock Text="{Binding imageUrl}" HorizontalAlignment="Center" />
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Width="300" TextWrapping="Wrap" Text="{Binding routeDescription}" HorizontalAlignment="Center" />
                                <Button Content="Add to logbook?"/>
                            </StackPanel>
                        </StackPanel></Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Content="See more?" Background="white" Foreground="LightBlue" HorizontalAlignment="Right"/>
        </StackPanel>
        </ScrollViewer>
    </DockPanel>

</UserControl>