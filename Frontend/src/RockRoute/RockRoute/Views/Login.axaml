<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="RockRoute.Views.Login">
        <StackPanel>
            <TextBlock Margin="5" HorizontalAlignment="Center" Text="Email:"/>
            <TextBox Name="EmailTxtBox" Watermark="Enter Email" Width="250" Margin="5" HorizontalAlignment="Center"/>
            <TextBlock Margin="5" HorizontalAlignment="Center" Text="Password:"/>
            <TextBox x:Name="PasswordTxtBox" Watermark="Password" PasswordChar="*" Width="250" Margin="5" HorizontalAlignment="Center"/>
            <CheckBox Margin="5" Content="Show Password" HorizontalAlignment="Center"/>
            <Button Margin="5" Click="LoginButton" Content="Login" HorizontalAlignment="Center"/>
            
            <!--         Start of Testing Backend stuff                -->
            <!-- If change any of the temp, Please update the table in Notion Backend    -->
            <Button Name="Temp1" Click="Temp_1" Margin="5" Content="Create Admin" HorizontalAlignment="Center"/>
            <Button Name="Temp2" Click="Temp_2" Margin="5" Content="Login as Admin" HorizontalAlignment="Center"/>
            <Button Name="Temp3" Click="Temp_3" Margin="5" Content="Null" HorizontalAlignment="Center"/>
            <Button Name="Temp4" Click="Temp_4" Margin="5" Content="Create Accounts" HorizontalAlignment="Center"/>
            <Button Name="Temp5" Click="Temp_5" Margin="5" Content="Create a new JohnBox" HorizontalAlignment="Center"/>

            <!--            End of Testing Backend stuff                           -->

            <Button Click="NeedAccountButton" Margin="5" Background="White" Foreground="#349beb" Content="Need an Account?" HorizontalAlignment="Center"/>
            <Button Margin="5" Content="Continue as Guest" HorizontalAlignment="Right"/>
        </StackPanel>
</Window>